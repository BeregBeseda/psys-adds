.menu_vars P {
  background: transparent url(<%=asset_path 'menu_main/main_menu_section_yellow_shadow.png'%>) no-repeat;
}

#main_block {
  background: transparent url(<%=asset_path 'bred.png'%>) no-repeat;

  width: 350px;
  /*min-width: 350px;*/
  height: auto;
  @include background-size;
  padding: 39px 65px 38px 60px;
  margin-top: 20%;
  margin-right: 20px;
}

#title_text {
  background: transparent url(<%=asset_path 'menu_main/title_text.png'%>) no-repeat;

  width: 350px;
  height: 107px;
}

#life {
  background: transparent url(<%=asset_path 'menu_main/life_text1.png'%>) no-repeat;
  @include transition_b;

  width: 350px;
  height: 76px;
  &:hover, &:focus, &:active {
    background: transparent url(<%=asset_path 'menu_main/life_text2.png'%>) no-repeat;
  }
}

#creation {
  background: transparent url(<%=asset_path 'menu_main/creation_text1.png'%>) no-repeat;
  @include transition_b;

  width: 350px;
  height: 131px;
  &:hover, &:focus, &:active {
    background: transparent url(<%=asset_path 'menu_main/creation_text2.png'%>) no-repeat;
  }
}

#habit {
  background: transparent url(<%=asset_path 'menu_main/habit_text1.png'%>) no-repeat;
  @include transition_b;

  width: 350px;
  height: 136px;
  &:hover, &:focus, &:active {
    background: transparent url(<%=asset_path 'menu_main/habit_text2.png'%>) no-repeat;
  }
}
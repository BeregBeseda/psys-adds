INPUT:-moz-placeholder {
  color: $form_text;
}

INPUT::-moz-placeholder {
  color: $form_text;
}

INPUT::-webkit-input-placeholder {
  color: $form_text;
}

#redex {
  resize: none;
}

#email_security {
  color: $dark_brown_70_per;
  font-size: 130%;
  font-weight: 700;
  text-align: center;
  margin: 2px 0 5px;
  padding-left: 50px;
  /*background: transparent url(<%#=asset_path 'form/form_security.png'%>) left top no-repeat;*/
  @include background-size(35px auto);
    IMG {
        width: 38px;
        height: auto;
    }
}

#save_text_in_textfield {
  width: 100%;
  height: 270px;
  overflow: auto;
  margin-bottom: 10px;
  &:focus {
    outline: none;
  }
  P {
    color: $dark_brown;
    font-size: 150%;
    font-weight: 700;
    text-align: justify;
  }
}

#form_pay_checkbox_label {
  font-size: 130%;
  margin-top: 2px;
}

#form_pay_checkbox {
  width: 15px !important;
  height: 15px !important;
}

#errors_style {
  color: $error_pink;
  display: inline-block;
  font-size: 170%;
  font-weight: 700;
  @include text-light(2px, 2px, 2px);
  padding: 6px 0 0 0;
  margin-bottom: 2px;
  LI {
    margin-left: 17px;
    padding-bottom: 5px;
  }
}

.errors_field {
  @include box-shadow(0, 0, 9px, $error_pink);
  padding-left: 4px !important;
  background: white url(<%=asset_path 'form/input_field_error_left_img.jpg'%>) left no-repeat;
  @include background-size(4px 100%);
  border: 2px red !important;
  margin: 4px 0 !important;
}

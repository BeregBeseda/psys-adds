- @menu_up_item = 'consults'

- @prerender = 'http://www.psysite.herokuapp.com/posts'

.block.block_with_menu_up
  = render partial: 'menus/menu_up'
  
  -if $success_msg
    #top_field
      = $success_msg
    - $success_msg = nil

  -##list
- @consults.reverse_order.each do |consult|
  - if consult.able == true
    = link_to consult do
      #list
        .list_position
          .block.block_with_description{style: "margin-left: #{cycle('30px', '20px', '12px', '22px')}"}
            %p
            -#  = image_tag(consult.main_image, alt: film.title, id: 'position_img_min')
            %p
              #list_name
                = consult.title
            %p
              #list_description{style: 'font-size: 150%'}
                -#■
                = image_tag 'fond/square.png'  
                = truncate(strip_tags(consult.description), length: 150, separator: ' ')
            %p
              = link_to 'Читать всю статью...', consult, id: 'link_under_description'
            -#= image_tag('products/separator.png', alt: '--------------------', id: 'separator')               
        
.block        
  = render partial: 'menus/menu_down'
  = render partial: 'layouts/footer_rights'

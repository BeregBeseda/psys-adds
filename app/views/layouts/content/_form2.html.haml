#button
  = form_for $addresser do |f|
    - if $addresser.errors.any?
      = javascript_include_tag 'auto_focus'
      :css
        #button INPUT {
          margin-bottom: 4px !important;
        }
      #errors_style
        - $addresser.errors.each do |attribute, msg|
          - if attribute == :email
            - @email_class = 'errors_field'
          - if attribute == :name
            - @name_class = 'errors_field'
          %li
            = msg
    - unless $addresser.errors.any?
      #top_field
        Напишите психологу, чтобы вместе выбрать удобные для Вас время и тариф
    - $addresser = nil

    %div
      = f.text_field :email, {class: 'input-address' ' input-xlarge' " #{@email_class}", type: 'text', placeholder: 'Ваш E-mail (обязательно)', 'data-maxsize' => '60', spellcheck: 'false'}
      = f.text_field :name, {class: 'input-name' ' input-xlarge' " #{@name_class}", type: 'text', placeholder: 'Ваше Имя (обязательно)', 'data-maxsize' => '50', spellcheck: 'false'}
      - @email_class = nil
      - @name_class = nil
      = f.submit 'Отправить письмо', { class: 'btn' ' btn-large' ' btn-primary' , style: ' color: white; padding: 5px 5px 5px 5px; font-size: 150%; font-family: Verdana, "Bitstream Vera Sans"; ', onMouseOver: "this.style.backgroundColor='rgb(0, 68, 204)'" }


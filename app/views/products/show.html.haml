- @menu_up_item = 'product'

- @prerender = 'http://www.psysite.herokuapp.com/mentions/'

#block{style: 'max-width: 900px; margin-left: 30px;'}

  - if @product.image != ''
    = image_tag(@product.image, alt: @product.name, id: 'position_img')
  #list_name
    = @product.name
  #list_description
    = @product.description.html_safe
  = image_tag('products/separator.png', alt: '--------------------', id: 'separator')
  #list_date.half_of_width
    - if @product.date
      = @product.date.to_s(:ru_datetime)
  #list_price
    %span
      Цена:
    = @product.price
    %span
      = t(:monetary_unit)
    = link_to mentions_path, target: "_blank", class: ' btn ' ' btn-success ' 'btn-small' do
      Посмотреть отзывы
  = image_tag('products/separator.png', alt: '--------------------', id: 'separator')

  -#= render partial: 'layouts/instruction/products'

  - if flash[:success]
    = javascript_include_tag 'auto_focus'
    #errors_style
    
    
  - @addresser ||= NewsEmail.new    
    

  = render partial: 'layouts/content/form_pay'
  = render partial: 'products/comments'

  = image_tag('products/separator.png', alt: '--------------------', id: 'separator')
  
  = render partial: 'menus/menu_up'
    
  = render partial: 'menus/menu_down'
  = render partial: 'layouts/footer_rights'

